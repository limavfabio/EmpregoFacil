<div class="flex h-screen">
  <!-- Left Panel: List of Cards -->
  <div class="w-1/3 bg-gray-100 p-4 overflow-y-auto">
    <h2 class="text-lg font-semibold mb-4">Card List</h2>
    <div class="space-y-4">
      
      <% JobListing.all.each do |job_listing| %>
        <div class="bg-white p-4 rounded shadow hover:shadow-lg transition">
          <h3 class="font-semibold"><%= @job_listing.title %></h3>
          <p class="text-gray-600"><%= @job_listing.description %></p>

        </div>
      <% end %>
      

      <!-- Add more cards as needed -->
    </div>
  </div>

  <!-- Right Panel: Details of Selected Card -->
  <%= render "job_listing", job_listing: @job_listing %>
</div>