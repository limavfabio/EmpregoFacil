<%= turbo_frame_tag dom_id(job_listing) do %>
<div class="w-2/3 bg-white p-6 overflow-y-auto">
  <h2 class="text-lg font-semibold mb-4">Card Details</h2>
  <div class="bg-gray-50 p-4 rounded shadow">
    <h3 class="font-semibold text-xl"><%= job_listing.title %></h3>
    <p class="text-gray-700 mt-2"><%= job_listing.description %></p>
    <p class="text-gray-700">Company: <%= job_listing.company.name %></p>
  </div>
</div>
<% end %>
