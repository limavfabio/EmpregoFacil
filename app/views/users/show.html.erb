    <div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
        <!-- Header Section -->
        <div class="flex items-center">
            <img src="https://placehold.co/150" alt="Profile Picture" class="w-32 h-32 rounded-full border-2 border-gray-300 shadow-md">
            <div class="ml-6">
                <h1 class="text-3xl font-semibold"><%= @user.name %></h1>
                <p class="text-gray-600">Software Engineer at Company</p>
                <p class="text-gray-500">Location: San Francisco, CA</p>
            </div>
        </div>

        <!-- Bio Section -->
        <div class="mt-4">
            <h2 class="text-xl font-semibold">About</h2>
            <p class="text-gray-700"><%= @user.bio %></p>
        </div>

        <!-- Skills Section -->
        <div class="mt-4">
            <h2 class="text-xl font-semibold">Skills</h2>
            <div class="flex flex-wrap mt-2">
                <% @user.skills.each do |skill| %>
                    <span class="bg-blue-100 text-blue-600 px-2 py-1 rounded-full text-sm mr-2"><%= skill.name %></span>
                <% end %>
            </div>
        </div>

        <!-- Experience Section -->
        <div class="mt-4">
            <h2 class="text-xl font-semibold">Experience</h2>
            <% @user.experiences.each do |experience| %>
                <div class="mt-2">
                    <h3 class="font-bold"><%= experience.title %></h3>
                    <p class="text-gray-600"><%= experience.company.name %><span class="text-gray-500">(<%= experience.start_date %> - <%= experience.end_date %>)</span></p>
                    <p class="text-gray-700"><%= experience.description %></p>
                </div>
            <% end %>
        </div>

        <!-- Education Section -->
        <div class="mt-4">
            <h2 class="text-xl font-semibold">Education</h2>
            <% @user.educations.each do |education| %>
                <div class="mt-2">
                    <h3 class="font-bold"><%= education.degree %> in <%= education.field_of_study %></h3>
                    <p class="text-gray-600"><%= education.school %> <span class="text-gray-500">(<%= education.start_date %> - <%= education.end_date %>)</span></p>
                </div>
            <% end %>
        </div>

        <!-- Contact Section -->
        <div class="mt-4">
            <h2 class="text-xl font-semibold">Contact</h2>
            <p class="text-gray-700">Email: <%= @user.email %></p>
            <p class="text-gray-700">Phone Number: <%= @user.phone_number %></p>
        </div>
    </div>
