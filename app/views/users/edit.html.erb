<%# app/views/users/edit.html.erb %>
<% if @user.errors.any? %>
  <div class="bg-red-500 text-white p-4 mb-4 rounded">
    <h2 class="font-bold">There were errors:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="max-w-lg mx-auto mt-10">
  <h1 class="text-2xl font-semibold mb-6">Edit Profile</h1>

  <%= form_with model: @user, url: user_path(@user.username), method: :patch do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :username, class: "block text-gray-700" %>
      <%= form.text_field :username, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700" %>
      <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :phone_number, class: "block text-gray-700" %>
      <%= form.telephone_field :phone_number, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :bio, class: "block text-gray-700" %>
      <%= form.text_area :bio, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :location, class: "block text-gray-700" %>
      <%= form.text_field :location, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Update Profile", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>