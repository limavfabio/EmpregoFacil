<div id="<%= dom_id post %>" class="max-w-lg mx-auto my-4 bg-white rounded-lg shadow-md overflow-hidden">
  <div class="flex items-center p-4">
      <img class="w-10 h-10 rounded-full" src="https://placehold.co/150" alt="User Profile Picture">
      <div class="ml-3">
          <h2 class="font-semibold text-gray-800">
            <%= post.user.name %>
          </h2>
          <p class="text-gray-600 text-sm">
            <%= custom_date post.created_at %>
          </p>
      </div>
  </div>
  <div class="p-4">
      <p class="text-gray-700">
        <%= post.body %>
      </p>
      <img class="mt-2 rounded-lg" src="https://placehold.co/600x300" alt="Post Image">
  </div>
  <div class="flex justify-between items-center p-4 border-t">
      <button class="text-blue-500 hover:bg-slate-300 p-2 rounded transition">
        <i data-lucide="thumbs-up" ></i>
      </button>
      <button class="text-blue-500 hover:bg-slate-300 p-2 rounded transition">
        <i data-lucide="messages-square" ></i>
      </button>
      <button class="text-blue-500 hover:bg-slate-300 p-2 rounded transition">
        <i data-lucide="share-2" ></i>
      </button>
  </div>
</div>
